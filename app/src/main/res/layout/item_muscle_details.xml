<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/round_6dp_background"
    android:backgroundTint="@color/light_gray"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="135dp"
        android:layout_height="110dp"
        android:background="@drawable/shape_rounded_corners_6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/example_trainer_image" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:text="@string/exercise_name"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_6dp_background"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/robotomedium"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="@string/target"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_6dp_background"
                android:backgroundTint="@color/streak"
                android:fontFamily="@font/robotomedium"
                android:layout_marginStart="5dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="@string/equipment"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/baseline_chevron_right_24"
        android:backgroundTint="@color/white" />


</LinearLayout>